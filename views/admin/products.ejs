<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <div class="clear"></div>
    <main>
      <div class="wraper">
        <% if (prods.length > 0) { %> <% for (let prod of prods) { %>
        <div class="wraper_item">
          <h1><%= prod.title %></h1>
          <img src="/<%= prod.imgUrl %>" alt="" />
          <h2><%= prod.price %>z≈Ç</h2>
          <h3><%= prod.description %></h3>
          <div class="wraper_button">
              <form action="/admin/delete" method="post">
                <a href="/admin/edit-product/<%= prod._id %>" class="btn">Edit</a>
                <input type="hidden" name="prodId" value="<%= prod._id %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn">Delete</button>
            </form>
          </div>
        </div>
        <% } %> <% } %>
      </div>
      <%- include('../includes/pagination.ejs') %>
    </main>
<%- include('../includes/end.ejs') %>
