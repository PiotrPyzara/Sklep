<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/form.css">
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <form action="/admin/edit-product" method="post" class="product-form" enctype="multipart/form-data">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%= prod.title %>">
        </div>
        <div class="form-control">
          <label for="image">Image</label>
                <input 
                    type="file" 
                    name="image" 
                    id="image" >
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" step="0.01" name="price" id="price" value="<%= prod.price %>">
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" cols="30" rows="5"><%= prod.description %></textarea>
        </div>
        <input type="hidden" name="id" value="<%= prod._id %>">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn">Update</button>
      </form>
    </main>
    
<%- include('../includes/end.ejs') %>
